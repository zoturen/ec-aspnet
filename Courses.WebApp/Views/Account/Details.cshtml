@{
    Layout = "_AccountLayout";
}


<div class="account-details">
    <h2>Account Details</h2>
    <div class="basic-info">
        <form>
            <h5>Basic Info</h5>
            <div class="input-row">
                <div class="input-group">
                    <label for="details-firstname">First name</label>
                    <input type="text" id="details-firstname" placeholder="Enter your first name...">
                </div>
                <div class="input-group">
                    <label for="details-lastname">Last name</label>
                    <input type="text" id="details-lastname" placeholder="Enter your last name...">
                </div>
            </div>
            <div class="input-row">
                <div class="input-group">
                    <label for="details-email">Email</label>
                    <input type="email" id="details-email" placeholder="Enter your first name...">
                </div>
                <div class="input-group">
                    <label for="details-phone">Phone</label>
                    <input type="text" id="details-phone" placeholder="Enter your phone...">
                </div>
            </div>
            <div class="input-group">
                <label for="details-bio">Bio <span>(optional)</span></label>
                <textarea id="details-bio" placeholder="Add a short bio..."></textarea>
            </div>
            <div class="btn-group">
                <button class="btn-theme-inverse">Cancel</button>
                <button class="btn-theme">Save changes</button>
            </div>
            
        </form>
    </div>
     <div class="address">
         <form>
             <h5>Address</h5>
             <div class="input-group">
                 <label for="details-address1">Address line 1</label>
                 <input type="text" id="details-address1" placeholder="Enter your address line...">
             </div>
             <div class="input-group">
                 <label for="details-address2">Address line 2</label>
                 <input type="text" id="details-address2" placeholder="Enter your second address line...">
             </div>
             <div class="input-row">
                 <div class="input-group">
                     <label for="details-postalcode">Postal code</label>
                     <input type="text" id="details-postalcode" placeholder="Enter your postal code...">
                 </div>
                 <div class="input-group">
                     <label for="details-city">City</label>
                     <input type="text" id="details-city" placeholder="Enter your city...">
                 </div>
             </div>
             <div class="btn-group">
                 <button class="btn-theme-inverse">Cancel</button>
                 <button class="btn-theme">Save changes</button>
             </div>
         </form>
    </div>
</div>